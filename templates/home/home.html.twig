{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
<h1>Accueil</h1>
<div class="accueil">
    

    
    {% for recette in recettes %}
    <div class="recette">
        <h5> {{recette.titre}} </h5>
        
        {% if recette.imageName %}
        {# Cette ligne sert a afficher l'image uploader #}
        <img src="{{vich_uploader_asset(recette, 'imageFile')}}" alt="">
        {% else %}
        <img src="{{recette.imagesUrl}}" alt="">
        {% endif %}
        
        <p>Post√© par : {{recette.user.firstname}} {{recette.user.lastname}} </p>
    </div>
    {% endfor %}
    
</div>
{% endblock %}
